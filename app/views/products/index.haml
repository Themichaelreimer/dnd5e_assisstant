.jumbotron
  %h1 Products
  %p= link_to 'Add new', new_product_path, class: 'btn btn-outline-dark'

.container-fluid
  .card-columns
    - @products.each do |product|
      .card
        - if product.photos.attached?
          .card-img-top
            .photo-wrapper
              %div= image_tag url_for(product.photos.first)
        .card-body
          %h5.card-title= product.title
          %h6.card-subtitle.mb-2= "$#{product.price}"
          %p.card-text= product.description
          = link_to 'View', product_path(product), class: 'button'