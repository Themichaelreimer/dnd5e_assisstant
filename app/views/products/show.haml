.wrapper
  %h1= @product.title

  %p= link_to 'Back', products_path, class: 'button'

  .card
    .card-header= @product.title
    .card-copy
      %p= "$#{@product.price}"
      %p= @product.description
      %p= @product.expires_at
      %p= link_to 'Edit', edit_product_path(@product), class: 'button'