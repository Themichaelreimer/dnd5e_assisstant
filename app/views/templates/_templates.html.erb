<div class="card border-primary mb-3 col-md-4" style="width:300px;">

  <div class="card-header">
    <h4 class="card-title"><%=template.name%> </h4>
    <h5 class="card-subtitle mb-2 text-muted">Lv: <%=template.challenge%></h5>
  </div>

  <div class = "card-body">

    <% if template.image %>
      <%= image_tag(template.image.url(:med), class:'card-img-top;center')%>
    <% else %>
      <img src="public/404.gif" height=256px height=256px alt="image not found">
    <% end %>
    <h5>HP: <%= template.hp_s %></h5>
    <h5>AC: <%=template.ac_s%></h5>

    <% if current_user %>
      <ul>
          <% if !current_user.templates.exists?(template.id) %>
            <li><%= button_to "Favourite", favorite_path, method: :post, :class =>"btn btn-primary", params: { user: current_user, template: template } %></li>
          <% else %>
            <li><%= button_to "Unfavourite", unfavorite_path, method: :post, :class =>"btn btn-primary", params: { user: current_user, template: template } %></li>
          <% end %>
        <li><%= link_to "Inspect", template, :class =>"btn btn-primary" %></li>
        <li><%= link_to "Delete", template, method: :delete, :class =>"btn btn-primary" %></li>
        <li><%= button_to "Spawn", create_monster_path, class:"btn btn-primary", params: { user: current_user, template: template} %></li>
      </ul>
    <% end %>
  </div>
</div>
