<!-- app/views/sessions/new.html.erb -->

<h1>Login</h1>
<%  if !current_user %>
  <div class="row col-md-4 col-md-offset-4 control-label ">
    <%= form_for :session, url: '/sessions' do %>
      Name: <%= text_field_tag :name %>
      Password: <%= password_field_tag :password %>
    <%= submit_tag "Log in" %>
  </div>
  <% end %>
<% else %>
  You are already signed in!
<% end %>
